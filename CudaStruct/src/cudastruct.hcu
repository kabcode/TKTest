#pragma once

template<unsigned Dimension>
struct CudaStruct
{
    unsigned dimension = Dimension;
    unsigned size[Dimension];
    float spacing[Dimension];
    float origin[Dimension];
    float* data;

    CudaStruct()
    {
        for (auto i = 0; i < Dimension; ++i)
        {
            size[i] = 0;
            spacing[i] = 0;
            origin[i] = 0;
            data = nullptr;
        }
    }
};